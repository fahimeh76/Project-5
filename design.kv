<LoginScreen>
    GridLayout:
        cols: 1
        padding: 20, 20
        GridLayout:
            cols: 1
            spacing: 20, 20
            Label:
                text: "User Login Page"
            TextInput:
                id: username
                hint_text: "User Name"
            TextInput:
                id: password
                hint_text: "Password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5 , 'center_y': 0.5}
            Label:
            id: login_wrong
            text: ""

        GridLayout:
            cols: 2
            spacing: 20, 20
            size_hint: 0.2, 0.2
            Button:
                text: "Forget Password"
            Button:
                text: "Sign Up" 
                on_press: root.sign_up( )


<SignUpScreen>:
    GridLayout:
    cols: 1
    Label:
        text: "Register in our website"
    TextInput:
        id: username
        hint_text: "User Name"
    TextInput:
        id: password
        hint_text: "Password"
    Button:
        text: "Submit"
        on_press: root.add_user(root.ids.username.text, root.ids.password.text)


<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Thanks for your registration"
        Button:
            text: "Login"
            on_press: root.go_to_login()

<LoginScreenSucces>:
    GridLayout:
        cols: 1
        Button:
            text: "Log Out"
            on_press: root.log_out()
        Label:
            text: "Enter some characters for search"
        TextInput:
            id: search_term
            hint_text: "Enter part of the country name"
        Button:
            text: "Search Countries"
            on_press: root.search_countries(root.ids.search_term.text)
        Label:
            id: Countries 
            text: ""


<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    LoginScreenSucces:
        name: "login_screen_success"
